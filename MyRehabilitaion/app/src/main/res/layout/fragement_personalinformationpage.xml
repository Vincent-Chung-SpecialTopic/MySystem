<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_01"
    android:foregroundGravity="center"
    tools:context="com.example.myrehabilitaion.ui.PersonalInfo.PersonalInfoFragment">


    <ImageView
        android:id="@+id/bigPic"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:padding="10dp"
        android:scaleType="fitCenter"
        android:src="@drawable/bg_round"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.123" />

    <TextView
        android:id="@+id/psinfo_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Vince"
        android:textSize="48sp"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="@+id/bigPic"
        app:layout_constraintStart_toStartOf="@+id/bigPic"
        app:layout_constraintTop_toBottomOf="@+id/bigPic" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="330dp"
        android:layout_height="180dp"
        android:text="病歷資料"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.564" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="330dp"
        android:layout_height="180dp"
        android:layout_marginTop="28dp"
        android:text="看診紀錄"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="@+id/textView18"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/textView18"
        app:layout_constraintTop_toBottomOf="@+id/textView18" />

</androidx.constraintlayout.widget.ConstraintLayout>